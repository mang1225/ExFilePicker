<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="7dp">

        <CheckBox
            android:id="@+id/only_one_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" /only_one_item"/>

        <CheckBox
            android:id="@+id/filter_listed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" /filter_listed"/>

        <CheckBox
            android:id="@+id/filter_exclude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" /filter_exclude"/>

        <CheckBox
            android:id="@+id/disable_new_folder_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" /disable_new_folder_button"/>

        <CheckBox
            android:id="@+id/disable_sort_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" /disable_sort_button"/>

        <CheckBox
            android:id="@+id/enable_quit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" /enable_quit_button"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text=" /choice_type"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <RadioGroup
            android:id="@+id/choice_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/choice_type_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text=" /choice_type_all"/>

            <RadioButton
                android:id="@+id/choice_type_files"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" /choice_type_files"/>

            <RadioButton
                android:id="@+id/choice_type_directories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" /choice_type_directories"/>
        </RadioGroup>

        <Button
            android:id="@+id/choose_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="21dp"
            android:text=" /choose_files"/>

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>